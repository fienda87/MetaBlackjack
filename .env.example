# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://user:password@host:6543/database?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/database"

# PgBouncer pooling (optional, untuk production)
DATABASE_POOL_URL="postgresql://user:password@pgbouncer:6432/database?statement_cache_size=0"
DATABASE_POOL_MODE="transaction"

# Connection pool settings
POOL_SIZE=20
POOL_TIMEOUT=30

# Query optimization
QUERY_TIMEOUT=10000

# =============================================================================
# BLOCKCHAIN (Polygon Amoy Testnet)
# =============================================================================
# RPC endpoint for Polygon Amoy testnet
POLYGON_AMOY_RPC_URL="https://rpc-amoy.polygon.technology"

# Contract addresses (from deployment)
NEXT_PUBLIC_GBC_TOKEN_ADDRESS="0xAb375cfac25e40Ed0e8aEc079B007DFA0ec4c29a"
NEXT_PUBLIC_FAUCET_ADDRESS="0xa04B31b44DE6773A6018Eaed625FBE6Cb9AA18a7"
NEXT_PUBLIC_DEPOSIT_ADDRESS="0x188D3aC5AE2D2B87EdFc1A46f3Ce900c0e7D4E22"
NEXT_PUBLIC_WITHDRAW_ADDRESS="0x84eb5B86e53EB5393FB29131a5A30deBA8236cC3"

# Backend signer private key (for withdrawal signatures)
BACKEND_PRIVATE_KEY="your_private_key_here"

# Internal API authentication key (generate with: openssl rand -hex 32)
# Used to secure blockchain processing endpoints (/api/deposit/process, etc.)
INTERNAL_API_KEY="ec106d0a8ff3dca203c8a8aa336fe1b5394bb36960d498d182411b4420cb4615"

# =============================================================================
# REDIS (Caching & Session)
# =============================================================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_URL="redis://localhost:6379"

# Cache settings
CACHE_ENABLED="true"
CACHE_TTL_USER="300"
CACHE_TTL_GAME="60"
CACHE_TTL_HISTORY="120"
CACHE_TTL_STATS="300"

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
# Enable query logging (production: false, development: true)
DB_LOG_QUERIES="false"
DB_SLOW_QUERY_THRESHOLD="1000"

# Performance metrics
PERFORMANCE_MONITORING="true"
PERFORMANCE_ALERTS="true"
SLOW_QUERY_THRESHOLD="100"

# =============================================================================
# NEXT.JS
# =============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Alternative: Use SOCKET_URL if you need a separate Socket.IO URL
# Useful when Socket.IO is on a different port or domain
# NEXT_PUBLIC_SOCKET_URL="http://localhost:3000"

NODE_ENV="development"

# Build optimization
NEXT_PUBLIC_BUILD_TIME="${BUILD_TIME}"
DISABLE_SOURCE_MAPS="false"

# Cache strategies
CACHE_REVALIDATE="60"

# =============================================================================
# WALLET CONNECT (Optional)
# =============================================================================
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your_project_id_here"

# Build Optimization Variables (for bundle analysis)
ANALYZE="false"
