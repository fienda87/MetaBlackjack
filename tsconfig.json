{
  "compilerOptions": {
    // ✅ Fast transpile mode
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Skip type checking of declaration files
    "noEmit": true, // Skip emit errors for type checking only
    "incremental": true, // Force incremental builds

    // ✅ Strong type checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": false,

    // ✅ Fast module resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true, // Fast isolated compilation

    // ✅ JSX and module settings
    "jsx": "preserve",
    "module": "esnext",

    "tsBuildInfoFile": "./.next/cache/tsconfig.tsbuildinfo",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  // ✅ Exclude heavy directories from type checking
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "scripts/**/*.ts",
    "blockchain/artifacts/**",
    "blockchain/cache/**"
  ],

  // ✅ Include only source files
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "pages/**/*",
    "app/**/*",
    ".next/types/**/*.ts",
    "server.ts"
  ]
}
